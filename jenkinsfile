pipeline{
    agent any
    tools {
        maven 'maven 3'
    }
    environment {
        DOCKER_TAG = getVersion()
    }
    stages{
        stage('SCM'){
            steps{
                git credentialsId: 'xgen_github', url: 'https://github.com/xgenOsama/devops_xgen_repo'
            }
        }
        stage('maven build'){
            steps{
                sh "mvn clean package"
            }
        }
        stage('docker build'){
            steps{
                sh "docker build . -t xgenosama/osama_app:${DOCKER_TAG} "
            }
        }
        stage('dockerhub push'){
            steps{
                withCredentials([string(credentialsId: 'my_docker_hub_password', variable: 'DockerHubPwd')]) {
                    sh "docker login -u xgenosama -p ${DockerHubPwd}"
                }
                sh "docker push  xgenosama/osama_app:${DOCKER_TAG} "
            }
        }
        stage('docker deploy'){
            steps{
                ansiblePlaybook credentialsId: 'newlinux-slave',  disableHostKeyChecking: true, extras: '-e DOCKER_TAG="${DOCKER_TAG}"', installation: 'ansible2', inventory: 'dev.inv', playbook: 'deploy-docker.yml'
            }
        }
    }
}
    
def getVersion(){
    def commitHash = sh returnStdout: true, script: 'git rev-parse --short HEAD'
    return commitHash
}

